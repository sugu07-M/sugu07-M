
  fetchAllItems() {
    const apiUrl = this.apiurl + '/EmployeeMasters';
    this.http.get<any[]>(apiUrl).subscribe(
      (response: any[]) => {
        this.supportnames = response.map(item => item.EmployeeId);
      },
      (error: any) => {
        console.error('GET request failed', error);
      }
    );
  }

  filterItems() {
    const filter = this.empid;
    this.dropdownItems = this.supportnames.filter(item =>
      item.toString().includes(filter)
    );
  }

selectItem(item: any) {
  this.empid = item;
  // Find the selected employee object by EmployeeId
  const selectedEmployee = this.supportnames.find(employee => employee.EmployeeId === item);
  if (selectedEmployee) {
    // Assign the first name from the selected employee to the firstname variable
    this.firstname = selectedEmployee.firstname;
  } else {
    // If no employee is found, reset the firstname variable
    this.firstname = '';
  }
  // Clear the dropdownItems array
  this.dropdownItems = [];
}
