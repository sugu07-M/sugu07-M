  public handleDrillDownClick(label: string): void {
    console.log("Clicked segment label:", label);
    // Navigate to a different route upon clicking a bar segment
    this.router.navigate(['/detail', label]);
  }


  public barChartOptions: any = {
    responsive: true,
    onClick: this.handleDrillDownClick.bind(this) // Bind the click event handler
  };
