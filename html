  public handleDrillDownClick(event: any): void {
    if (event.active.length > 0) {
      const clickedSegmentLabel = this.barChartLabels[event.active[0]._index];
      console.log("Clicked segment label:", clickedSegmentLabel);
      // Perform navigation with the clicked segment label
      this.router.navigate(['/detail', clickedSegmentLabel]);
    }
  }



  public barChartOptions: any = {
    responsive: true,
    onClick: this.handleDrillDownClick.bind(this) // Bind the click event handler
  };
