<input class="searchinput" type="text" placeholder="Employe ID" [(ngModel)]="empid" (input)="filterItems()" />
  <ul class="dropdowns-list" *ngIf="dropdownItems.length > 0">
    <li class="drop-list" value="" *ngFor="let item of dropdownItems" (click)="selectItem(item)">
      {{item.EmployeeId}}
    </li>
  </ul>
  selectItem(item: any) {
  this.empid = item.EmployeeId;
  this.firstname = item.firstname;
  this.lastname = item.lastname;
  // Assuming there is a middle name property in item as well
  this.middlename = item.middlename;
  this.dropdownItems = [];
}
