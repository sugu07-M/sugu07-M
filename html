generateMonthLabels(): string[] {
  const currentDate = new Date();
  const currentMonth = currentDate.getMonth() + 1; // Adding 1 because getMonth() returns 0-indexed months (0 for January)
  const currentYear = currentDate.getFullYear();

  // Calculate 6 months ago
  const sixMonthsAgo = new Date(currentDate);
  sixMonthsAgo.setMonth(sixMonthsAgo.getMonth() - 6);
  const sixMonthsAgoMonth = sixMonthsAgo.getMonth() + 1;
  const sixMonthsAgoYear = sixMonthsAgo.getFullYear();

  // Calculate next month
  const nextMonth = new Date(currentDate);
  nextMonth.setMonth(nextMonth.getMonth() + 1);
  const nextMonthMonth = nextMonth.getMonth() + 1;
  const nextMonthYear = nextMonth.getFullYear();

  // Create labels array
  const labels: string[] = [];
  
  // Push labels for the current month, 6 months ago, and next month
  labels.push(`${currentYear}-${currentMonth}`);
  labels.push(`${sixMonthsAgoYear}-${sixMonthsAgoMonth}`);
  labels.push(`${nextMonthYear}-${nextMonthMonth}`);

  return labels;
}

