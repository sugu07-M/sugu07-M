public drillDownChart(status: string): void {
  // Navigate to the drilled-down chart component with the selected status
  this.router.navigate(['/drilldownchart', status]);
}

// Modify chartClicked method to call drillDownChart when a segment is clicked
public chartClicked(e: any): void {
  if (e.active.length > 0) {
    const clickedSegment = e.active[0]._model.label;
    this.drillDownChart(clickedSegment);
  }
}
