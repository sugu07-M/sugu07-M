import { ActivatedRoute, RouterStateSnapshot } from '@angular/router';



public handleDrillDownClick(label: string): void {
    console.log("Clicked segment label:", label);
    const monthIndex = this.barChartLabels.indexOf(label);
    const monthData = {
      label: label,
      completed: this.completed[monthIndex],
      noncompleted: this.noncompleted[monthIndex]
    };
    // Navigate to a different route upon clicking a bar segment, passing the month data
    this.router.navigate(['/detail'], { state: { monthData: monthData } });
  }

