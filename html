import { Router } from '@angular/router';

constructor(private router: Router) {}

public chartClicked(event: any): void {
    if (event.active && event.active.length > 0) {
        const clickedIndex = event.active[0]._index; // Get the index of the clicked bar
        const clickedMonth = this.barChartLabels[clickedIndex]; // Get the label of the clicked bar (month)

        // Navigate to another page with the clicked month's data
        this.router.navigate(['/monthly-data'], {
            queryParams: {
                month: clickedMonth
            }
        });
    }
}


