handleDrillDownClick(event: ChartEvent) {
  console.log('handleDrillDownClick method called');
  if (event.active && event.active.length > 0) {
    const clickedIndex = event.active[0]._index;
    const clickedMonth = this.month[clickedIndex];
    const completed = this.completed[clickedIndex];
    const noncompleted = this.noncompleted[clickedIndex];

    // Navigate to detail page with data
    this.router.navigate(['/detail'], { state: { month: clickedMonth, completed, noncompleted } });
  }
}
 ngOnInit() {
    this.route.paramMap.subscribe(params => {
      this.month = params.get('month');
      this.completed = +params.get('completed');
      this.noncompleted = +params.get('noncompleted');
    });
  }
  month: string;
  completed: number;
  noncompleted: number;
