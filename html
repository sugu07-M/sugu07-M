 <div class="col">
   <label for="dropdown"></label>
   <select style="margin-top:-14%" class="form-control" id="dropdown">
     <option >Select Task</option>
     <option>Change Request</option>
     <option>Release</option>
     <option>Closure</option>
   </select>
 </div>
function handleDropdownChange(event: Event): void {
    const dropdown = event.target as HTMLSelectElement;
    const selectedOptions = Array.from(dropdown.selectedOptions).map(option => option.value);
    console.log('Selected options:', selectedOptions);
    // You can perform any other operations with the selected options here
}

// Assuming you have a reference to the dropdown element
const dropdown = document.getElementById('dropdown') as HTMLSelectElement;

// Add an event listener to call the handleDropdownChange function when the selection changes
dropdown.addEventListener('change', handleDropdownChange);

