 <ng-multiselect-dropdown [(ngModel)]="item_id"
                          [settings]="dropdownSettings"
                          [data]="dropdownList"
                          (onSelect)="onItemSelect($event)"
                          (onSelectAll)="onItemSelect($event)"
                          (onDeSelect)="onItemSelect($event)"
                          (onDeSelectAll)="onItemSelect($event)"
                          >
 </ng-multiselect-dropdown>

  this.dataService.getData().subscribe((data: any) => {
      // Assuming data is an array of objects with 'item_id' and 'item_text' properties
      this.dropdownList = data;

      // Set dropdown settings
      this.dropdownSettings = {
        idField: 'item_id',
        textField: 'item_text'
      };
    });
  }

 onItemSelect(item: any) {
  this.selectedItems.push(item); // Add the selected item to the array
  console.log(this.selectedItems); // Logging for debugging purposes
}

onSelectAll(items: any[]) {
  this.selectedItems = items; // Store all selected items
  console.log(this.selectedItems); // Logging for debugging purposes
}

onDeSelect(item: any) {
  this.selectedItems = this.selectedItems.filter(i => i !== item); // Remove the deselected item from the array
  console.log(this.selectedItems); // Logging for debugging purposes
}

onDeSelectAll() {
  this.selectedItems = []; // Clear the array when all items are deselected
  console.log(this.selectedItems); // Logging for debugging purposes
}
