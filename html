<div class="search-hero">
  <input class="form-control" type="text" name="search"[(ngModel)]="searchText" autocomplete="off" placeholder="&#61442;  Start searching ">
</div>

 filteredData: any[]; // Array to hold filtered data
 searchText: string = '';
 filterData() {
   this.filteredData = this.supportAssignName.filter(item =>
     item.firstName.toUpperCase().includes(this.searchText.toUpperCase())
   );
 }
  this.filteredData = this.supportAssignName;
