fetchAllItems() {
  const apiUrl = this.apiurl + '/EmployeeMasters';
  this.http.get<any[]>(apiUrl).subscribe(
    (response: any[]) => {
      console.log("Function", response);
      this.supportnames = response.map(item => item.EmployeeId);
      console.log("Support Team Name", this.supportnames);
    },
    (error: any) => {
      console.error('GET request failed', error);
    }
  );
}

filterItems() {
  const filter = this.empid;
  this.dropdownItems = this.supportnames.filter(item =>
    item.toString().includes(filter)
  );
  if (this.dropdownItems.length === 0 && filter === '') {
    this.dropdownItems.push('No name found');
  } else if (filter === '') {
    this.dropdownItems.length = 0;
  }
}

selectItem(item: any) {
  // Assuming item is an object containing EmployeeId, FirstName, LastName
  this.selectedValue = item.EmployeeId;
  this.empid = item.EmployeeId;
  // Example to show FirstName and LastName
  console.log("First Name:", item.FirstName);
  console.log("Last Name:", item.LastName);
  this.dropdownItems = [];
}
