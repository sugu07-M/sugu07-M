  <label>Employe ID</label>
  <input class="searchinput" type="text" placeholder="Employe ID" [(ngModel)]="empid" (input)="filterItems()" />
  <ul class="dropdowns-list" *ngIf="dropdownItems.length > 0">
    <li class="drop-list" value="" *ngFor="let item of dropdownItems" (click)="selectItem(item)">
      {{item}}
    </li>
  </ul>
</div>
<div class="col">
  <label>First Name</label>
  <input class="searchinput" type="text" placeholder="Firstname" [(ngModel)]="firstname" />

</div>
<div class="col">
  <label>Middle Name</label>
  <input type="text" placeholder="Middlename" [(ngModel)]="middlename" />
</div>
<div class="col">
  <label>Last Name</label>
  <input type="text" placeholder="Lastname" [(ngModel)]="lastname" />
</div>
fetchAllItems() {
  const apiUrl = this.apiurl + '/EmployeeMasters';
  this.http.get<any[]>(apiUrl).subscribe(
    (response: any[]) => {
      this.supportnames = response.map(item => item.EmployeeId);
    },
    (error: any) => {
      console.error('GET request failed', error);
    }
  );
}

filterItems() {
  const filter = this.empid;
  this.dropdownItems = this.supportnames.filter(item =>
    item.toString().includes(filter)
  );
}

selectItem(item: any) {
  this.empid = item;
  // Find the selected employee object by EmployeeId
  const selectedEmployee = this.supportnames.find(employee => employee.EmployeeId === item);
  if (selectedEmployee) {
    // Assign the first name from the selected employee to the firstname variable
    this.firstname = selectedEmployee.firstname;
  } else {
    // If no employee is found, reset the firstname variable
    this.firstname = '';
  }
  // Clear the dropdownItems array
  this.dropdownItems = [];
}
