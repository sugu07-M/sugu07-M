import { Component, ViewChild, ElementRef, AfterViewInit } from '@angular/core';
  @ViewChild('chart') chartRef!: ElementRef;
  doughnutChart: Chart;
   ngAfterViewInit() {
    this.doughnutChart = new Chart(this.chartRef.nativeElement, {
      type: 'doughnut',
      data: this.doughnutChartData,
      options: {
        onClick: (event, elements) => {
          if (elements && elements.length > 0) {
            const index = elements[0]._index;
            this.handleChartClick(index);
          }
        }
      }
    });
  }

  private handleChartClick(index: number): void {
    // Always navigate to the same page when any segment is clicked
    this.router.navigate(['/filterdashboard']);
  }
