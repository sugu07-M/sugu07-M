(chartClick)="handleDrillDownClick($event)"

public handleDrillDownClick(e: any): void {
  if (e.active.length > 0) {
    const clickedSegment = e.active[0]._model.label;
    
    if (this.isDrillDown) {
      // Reset the flag
      this.isDrillDown = false;
      
      // Handle drill-down action
      this.drillDownChart(clickedSegment);
    } else {
      // Handle regular chart click
      this.router.navigate(['/filterdashboard']);
    }
  }
}
