  <div class="col">
    <label>Employe ID</label>
    <input class="searchinput" type="text" placeholder="Employe ID" [(ngModel)]="empid" (input)="filterItems()" />
    <ul class="dropdowns-list" *ngIf="dropdownItems.length > 0">
      <li class="drop-list" value="" *ngFor="let item of dropdownItems" (click)="selectItem(item)">{{item}}</li>
    </ul>
  </div>
  <div class="col">
    <label>First Name</label>
    <input class="searchinput" type="text" placeholder="Firstname" [(ngModel)]="firstname" />

  </div>
  <div class="col">
    <label>Middle Name</label>
    <input type="text" placeholder="Middlename" [(ngModel)]="middlename" />
  </div>
  <div class="col">
    <label>Last Name</label>
    <input type="text" placeholder="Lastname" [(ngModel)]="lastname" />
  </div>

  fetchAllItems() {
  const apiUrl = this.apiurl + '/EmployeeMasters';
  this.http.get<any[]>(apiUrl).subscribe(
    (response: any[]) => {
      console.log("Function", response);
      this.supportnames = response.map(item => item.EmployeeId);
      console.log("Support Team Name", this.supportnames);
    },
    (error: any) => {
      console.error('GET request failed', error);
    }
  );
}

filterItems() {
  const filter = this.empid;
  this.dropdownItems = this.supportnames.filter(item =>
    item.toString().includes(filter)
  );
  if (this.dropdownItems.length === 0 && filter === '') {
    this.dropdownItems.push('No name found');
  } else if (filter === '') {
    this.dropdownItems.length = 0;
  }
}

selectItem(item: any) {
 
  this.empid = item.EmployeeId;
  console.log("employe id:", item.empid);
  console.log("first name:", item.firstname);
  this.dropdownItems = [];
}
