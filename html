  public handleDrillDownClick(event: any): void {
    if (event.active.length > 0) {
      const clickedSegment = event.active[0]._model.label;

      if (this.isDrillDown) {
        // Reset the flag
        this.isDrillDown = false;

        // Handle drill-down action
        this.drillDownChart(clickedSegment);
      } else {
        // Handle regular chart click
        this.router.navigate(['/filterdashboard']);
      }
    }
  }

  public barChartOptions: any = {
    responsive: true,
    onClick: this.handleDrillDownClick.bind(this) // Bind the click event handler
  };
