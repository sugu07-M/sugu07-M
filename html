updateChartData() {
    // Clear previous data
    this.barChartData = [];
    this.barChartLabels = [];

    // Filter data based on creation date and generate new chart data and labels
    const filteredData = this.changerequest.filter((item: any) => {
      const creationDate = new Date(item.crdate);
      const currentDate = new Date();

      return creationDate.getMonth() === currentDate.getMonth() && creationDate.getFullYear() === currentDate.getFullYear();
    });

    // Count change requests for each month
    const counts: { [key: string]: number } = {};
    filteredData.forEach((item: any) => {
      const monthYear = this.getMonthYear(item.crdate);
      counts[monthYear] = (counts[monthYear] || 0) + 1;
    });

    // Generate chart labels and data
    const currentDate = new Date();
    for (let i = 0; i < 6; i++) {
      const monthYear = this.getMonthYear(currentDate);
      this.barChartLabels.unshift(monthYear);
      this.barChartData.unshift({ data: [counts[monthYear] || 0], label: monthYear });
      currentDate.setMonth(currentDate.getMonth() - 1);
    }
  }
getMonthYear(date: Date): string {
    const monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
    return monthNames[date.getMonth()] + ' ' + date.getFullYear();
  }
