updateChartOptions() {
    this.chartOptions = {
        animationEnabled: true,
        exportEnabled: false,
        data: this.stagesToCount.map((stage, index) => ({
            dataPoints: this.multi.map(plantSeries => ({
                y: plantSeries.data[index], // Check if this is correctly mapping to each stage count
                label: plantSeries.label
            })),
            type: "stackedBar",
            name: stage,
            showInLegend: true,
            color: this.getRandomColor(index)
        })),
        axisX: {
            title: "Plant ID",
            reversed: true
        },
        axisY: {
            title: "Total Changes",
            gridThickness: 0,
            includeZero: true
        },
        toolTip: {
            shared: true
        },
        legend: {
            dockInsidePlotArea: false,
            horizontalAlign: "center",
            verticalAlign: "top"
        }
    };
}
