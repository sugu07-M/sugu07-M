updateChartOptions() {
  this.chartOptions = {
    animationEnabled: true,
    exportEnabled: false,
    data: this.multi.map((plantSeries, index) => ({
      type: "stackedBar",
      name: plantSeries.label,
      showInLegend: true,
      color: this.getRandomColor(index),
      dataPoints: this.stagesToCount.map(stage => {
        const count = plantSeries.data[this.stagesToCount.indexOf(stage)];
        console.log('Stage:', stage, 'Count:', count); // Log the stage and count
        return { y: count, label: stage };
      })
    })),
    axisX: {
      title: "Stages"
    },
    axisY: {
      title: "Total Changes",
      gridThickness: 0,
      includeZero: true
    },
    toolTip: {
      shared: true
    },
    legend: {
      dockInsidePlotArea: false,
      horizontalAlign: "center",
      verticalAlign: "top"
    }
  };
}
