getChartData(selectedPlantIds: string[]) {
  const apiUrls = this.apiurl + '/ViewChangeRequest/ViewChangerequest';
  let queryParams = new HttpParams();

  if (selectedPlantIds.length > 0 && this.startDate && this.endDate) {
    queryParams = queryParams.set('plantId', selectedPlantIds.join(','));
    queryParams = queryParams.set('crdate', this.startDate + '-' + this.endDate);
  }

  const httpOptions = {
    headers: new HttpHeaders({
      'Content-Type': 'application/json'
    }),
    params: queryParams
  };

  console.log('Requesting data with parameters:', queryParams.toString()); // Log the request parameters

  this.http.get(apiUrls, httpOptions).subscribe(
    (response: any) => {
      console.log('Received response:', response); // Log the response data

      this.chartdata = response;
      this.multi = [];

      const uniquePlants = [...new Set(response.map((item: { plantId: any; }) => item.plantId))];

      console.log('Unique Plants:', uniquePlants); // Log the unique plant IDs found in the response

      uniquePlants.forEach(plantId => {
        const plantData = response.filter((item: { plantId: any; }) => item.plantId === plantId);

        console.log('Data for plantId:', plantId, plantData); // Log the data for each plantId

        const stagesCount: { [key: string]: number } = {};
        this.stagesToCount.forEach(stage => {
          stagesCount[stage] = plantData.filter((item: { stage: string; }) => item.stage.trim() === stage).length;
        });

        const plantSeries = {
          label: plantId,
          data: this.stagesToCount.map(stage => stagesCount[stage])
        };

        console.log('Series for plantId:', plantId, plantSeries); // Log the series data for each plantId

        this.multi.push(plantSeries);
      });

      this.updateChartOptions();
      this.showChart = true;
    },
    (error: any) => {
      console.error('Error fetching chart data:', error);
    }
  );
}
