updateChartOptions() {
  this.chartOptions = {
    animationEnabled: true,
    exportEnabled: false,
    data: this.multi.map((plantSeries, index) => ({
      type: "stackedBar",
      name: plantSeries.label,
      showInLegend: true,
      color: this.getRandomColor(index),
      dataPoints: this.stagesToCount.map(stage => ({
        y: plantSeries.data[stage] || 0, // Access count for the stage or default to 0 if undefined
        label: stage
      }))
    })),
    axisX: {
      title: "Stages"
    },
    axisY: {
      title: "Total Changes",
      gridThickness: 0,
      includeZero: true
    },
    toolTip: {
      shared: true
    },
    legend: {
      dockInsidePlotArea: false,
      horizontalAlign: "center",
      verticalAlign: "top"
    }
  };
}
