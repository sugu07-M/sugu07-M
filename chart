updateChartOptions() {
  this.chartOptions = {
    animationEnabled: true,
    exportEnabled: false,
    data: this.multi.map((plantSeries, index) => ({
      type: "stackedBar",
      name: plantSeries.label,
      showInLegend: true,
      color: this.getRandomColor(index),
      dataPoints: plantSeries.data.map((count, stageIndex) => ({
        y: count,
        label: this.stagesToCount[stageIndex]
      }))
    })),
    axisX: {
      title: "Stages"
    },
    axisY: {
      title: "Total Changes",
      gridThickness: 0,
      includeZero: true
    },
    toolTip: {
      shared: true
    },
    legend: {
      dockInsidePlotArea: false,
      horizontalAlign: "center",
      verticalAlign: "top"
    }
  };
}
