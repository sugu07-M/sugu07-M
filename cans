 public chartClicked(event: any): void {
    if (event.active && event.active.length > 0) {
      const clickedLabel = this.doughnutChartLabels[event.active[0]._index];
      this.navigateToPage(clickedLabel);
    }
  }

  private navigateToPage(label: string): void {
    switch (label) {
      case 'Draft':
        this.router.navigate(['/draft']);
        break;
      case 'Pending Approval':
        this.router.navigate(['/pending-approval']);
        break;
      case 'Approved':
        this.router.navigate(['/approved']);
        break;
      // Add more cases for other labels as needed
      default:
        console.warn('Unhandled label:', label);
        break;
    }
  }
