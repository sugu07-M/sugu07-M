handleDrillDownClick(event: any): void {
  if (event && event.active && event.active.length > 0) {
    const clickedLabel = this.barChartLabels[event.active[0]._index];

    // Navigate based on the clicked label
    switch (clickedLabel) {
      case 'Open':
        this.router.navigate(['/open-page']).catch(error => console.error('Navigation failed:', error));
        break;
      case 'Completed':
        this.router.navigate(['/completed-page']).catch(error => console.error('Navigation failed:', error));
        break;
      default:
        // Do nothing if other labels are clicked
        break;
    }
  }
}
