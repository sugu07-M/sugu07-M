 showMiniForm: boolean = true; // Assuming it's initially shown
  formFields: any[] = [];

  constructor() {
    // Add the initial form field
    this.addFormField();
  }

  toggleMiniForm() {
    this.showMiniForm = !this.showMiniForm;
  }

  addFormField() {
    this.formFields.push({});
  }


*ngFor="let field of formFields; let i = index"
