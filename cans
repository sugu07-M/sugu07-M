onChartClicked(event: any): void {
  // Retrieve the chart element from the event
  const chartElement = event.active[0];
  
  // Ensure an element is clicked
  if (chartElement) {
    // Retrieve the label and data index
    const label = this.doughnutChartLabels[chartElement._index];
    const dataIndex = chartElement._datasetIndex;
    
    // Handle the click event based on the label and data index
    console.log('Clicked on label:', label);
    console.log('Data index:', dataIndex);
    
    // Example: navigate to a different page based on the clicked label
    switch (label) {
      case 'Draft':
        // Navigate to the Draft page
        break;
      case 'Pending Approval':
        // Navigate to the Pending Approval page
        break;
      // Add cases for other labels as needed
    }
  }
