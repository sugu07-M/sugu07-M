 updateBarChartData(months: number[]) {
    // Your logic to update the bar chart data
    // Assuming you have data manipulation logic here
    this.barChartData = [
      { data: this.noncompleted, label: 'Open' },
      { data: this.completed, label: 'Completed' }
    ];
    
    // Update chart labels
    this.updateBarChartLabels(months);
  }

  updateBarChartLabels(months: number[]) {
    // Your logic to update the bar chart labels
    // Assuming you have logic to convert month numbers to month names
    this.barChartLabels = months.map(month => this.getMonthName(month));
  }

  getMonthName(month: number): string {
    // Your logic to convert month number to month name
    // Example logic:
    const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
    return monthNames[month - 1]; // Adjusting for 0-based index
  }
chartdata: any;
 completed: any[]=[];
 noncompleted: any[]=[];
 month: any[] = [];
 barchartdata: any[] = [];
 barChartLabels: string[] = [];
 
 Getbarchart() {
   const apiUrls = this.apiurl + '/Barchart/Getbarchart';
   

   const httpOptions = {
     headers: new HttpHeaders({
       'content-Type': 'application/json'
     })
   };

   this.http.get(apiUrls).subscribe(
     (response: any) => {
       this.chartdata = response;

       const completed:number[] = response.map((item: { completedIdnum: any; }) => item.completedIdnum);
       const noncompleted:number[] = response.map((item: { nonCompletedIdnum: any; }) => item.nonCompletedIdnum);
       const month = response.map((item: { crmonth: any }) => item.crmonth);
       this.updateBarChartLabels(month);
      
          if (this.completed.length === 0 && this.noncompleted.length === 0) {
        this.barChartData = []; // Clear the chart data
        // Display a message or handle the absence of data as required
        console.log("No data available for the chart");


     }, 
     (error) => {
       console.log("Post failed", error);
     }
   );
 }
