public chartClicked(event: any): void {
  console.log('Chart clicked:', event);
  if (event.active && event.active.length > 0) {
    const clickedLabel = this.doughnutChartLabels[event.active[0]._index];
    console.log('Clicked label:', clickedLabel);
    this.navigateToPage(clickedLabel);
  }
}

private navigateToPage(label: string): void {
  console.log('Navigating to:', label);
  switch (label) {
    case 'Draft':
      this.router.navigate(['/draft']).then(() => console.log('Navigation successful')).catch(err => console.error('Navigation failed:', err));
      break;
    case 'Pending Approval':
      this.router.navigate(['/pending-approval']).then(() => console.log('Navigation successful')).catch(err => console.error('Navigation failed:', err));
      break;
    // Add more cases for other labels as needed
    default:
      console.warn('Unhandled label:', label);
      break;
  }
}
