  selectedItems: any[] = []; // Initialize array to store selected items

private updateApproverStage() {
    if (this.selectedItems.length === 0) {
      this.approverstage = ''; // Reset if no items selected
    } else if (this.selectedItems.length <= 2) {
      // If one or two items selected, concatenate their IDs with a separator
      this.approverstage = this.selectedItems.map(item => item.item_id).join(',');
    } else {
      // If more than two items selected, set approverstage to 'selectall'
      this.approverstage = 'selectall';
    }
  }

 onItemSelect(item: any) {
    this.selectedItems.push(item);
    this.updateApproverStage();
  }

  // Function triggered on item deselect
  onItemDeSelect(item: any) {
    this.selectedItems = this.selectedItems.filter(selectedItem => selectedItem.item_id !== item.item_id);
    this.updateApproverStage();
  }

  // Function triggered on select all
  onSelectAll(items: any) {
    this.selectedItems = items;
    this.updateApproverStage();
  }

  // Function triggered on deselect all
  onUnSelectAll() {
    this.selectedItems = [];
    this.updateApproverStage();
  }
