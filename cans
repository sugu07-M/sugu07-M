 barChartLabels: string[] = ['Open', 'In Progress', 'Completed'];

 onClick(event: any): void {
    const clickedIndex = event.active[0]._index;
    const clickedLabel = this.barChartLabels[clickedIndex];

    // Navigate to the detailed report based on the clicked label
    switch (clickedLabel) {
      case 'Open':
        this.router.navigate(['/detailed-report/open']); // Navigate to detailed report for 'Open' tasks
        break;
      case 'In Progress':
        this.router.navigate(['/detailed-report/in-progress']); // Navigate to detailed report for 'In Progress' tasks
        break;
      case 'Completed':
        this.router.navigate(['/detailed-report/completed']); // Navigate to detailed report for 'Completed' tasks
        break;
      default:
        // Handle unexpected labels or do nothing
        break;
    }
  }
