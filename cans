import { Color } from 'ng2-charts';

// Define your color scheme
const colorScheme: Color[] = [
  { name: 'Green', selectable: true, group: 'Green', value: '#14A44D' },
  { name: 'Gray', selectable: true, group: 'Gray', value: '#808080ff' },
  { name: 'Blue', selectable: true, group: 'Blue', value: '#54B4D3' },
  { name: 'Red', selectable: true, group: 'Red', value: '#DC4C64' },
  { name: 'Yellow', selectable: true, group: 'Yellow', value: '#b5eb49' }
];

// Assign the color scheme to your component's property
colorScheme: Color[] = colorScheme;
