handleDrillDownClick(event: any): void {
  console.log('Clicked event:', event);

  if (event && event.active && event.active.length > 0) {
    const clickedIndex = event.active[0]._index;
    const clickedLabel = this.barChartLabels[clickedIndex];
    console.log('Clicked label:', clickedLabel);

    if (clickedLabel === 'Open') {
      this.router.navigate(['/open-page']).then(() => console.log('Navigated to Open Page'));
    } else if (clickedLabel === 'Completed') {
      this.router.navigate(['/completed-page']).then(() => console.log('Navigated to Completed Page'));
    }
  }
}
