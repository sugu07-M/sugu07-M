 onChartClicked(event: any): void {
    const clickedLabel = this.doughnutChartLabels[event.active[0]._index];
    switch (clickedLabel) {
      case 'Draft':
        this.router.navigate(['/draft-page']);
        break;
      case 'Pending Approval':
        this.router.navigate(['/pending-approval-page']);
        break;
      case 'Approved':
        this.router.navigate(['/approved-page']);
        break;
      // Add cases for other labels
      default:
        // Handle default case
        break;
    }
  }
