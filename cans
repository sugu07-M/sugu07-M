
 Property 'filterItems' does not exist on type 'SupportTeamComponent'.


supportnames: Employee[] = [];

fetchAllItems() {
  const apiUrl = this.apiurl + '/SupportTeam';
  this.http.get<Employee[]>(apiUrl).subscribe(
    (response: Employee[]) => {
      console.log("Function", response);
      this.supportnames = response;
    },
    (error: any) => {
      console.error('GET request failed', error);
    }
  );
}

selectItem(item: Employee) {
  this.empid = item.empId;
  this.firstname = item.firstName;
  this.lastname = item.lastName; // Update last name
  console.log("Employee ID:", this.empid);
  console.log("First Name:", this.firstname);
  console.log("Last Name:", this.lastname);
  this.dropdownItems = [];
}



<label>Employe ID</label>
  <input class="searchinput" type="text" placeholder="Employe ID" [(ngModel)]="empid" (input)="filterItems()" />
  <ul class="dropdowns-list" *ngIf="dropdownItems.length > 0">
    <li class="drop-list" value="" *ngFor="let item of dropdownItems" (click)="selectItem(item)">
      {{ item.empId }} - {{ item.firstName }} {{ item.lastName }}
    </li>
  </ul>
