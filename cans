newCount: number[] = Array(12).fill(0); // Assuming there are 12 months
completedCount: number[] = Array(12).fill(0);
pendingCount: number[] = Array(12).fill(0);

// Initialize the labels with the first 12 months (assuming current month is March)
public barChartLabels: string[] = this.generateMonthLabels();

generateMonthLabels(): string[] {
  const labels = [];
  const currentMonth = new Date().getMonth();
  for (let i = 0; i < 12; i++) {
    const month = (currentMonth + i) % 12; // Ensure it loops around to January after December
    labels.push(this.getMonthName(month));
  }
  return labels;
}

getMonthName(monthIndex: number): string {
  const date = new Date();
  date.setMonth(monthIndex);
  return date.toLocaleString('en-US', { month: 'short' });
}
