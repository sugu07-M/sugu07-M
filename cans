public chartClicked({ event, active }: { event: MouseEvent, active: any[] }): void {
    if (active.length > 0) {
      const chartData = active[0]._chart.data;
      const clickedIndex = active[0]._index;

      // Determine which segment was clicked
      const label = chartData.labels[clickedIndex];
      const value = chartData.datasets[0].data[clickedIndex];

      // Perform drill-down action based on the clicked segment
      switch (label) {
        case 'Red':
          // Navigate to a page or perform an action related to the Red segment
          console.log('Red segment clicked');
          break;
        case 'Blue':
          // Navigate to a page or perform an action related to the Blue segment
          console.log('Blue segment clicked');
          break;
        case 'Yellow':
          // Navigate to a page or perform an action related to the Yellow segment
          console.log('Yellow segment clicked');
          break;
        default:
          // Handle default case
          break;
      }
    }
  }
