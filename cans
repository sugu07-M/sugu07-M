 dropdownList: any[] = [];
  dplantcode: any = null; // Initialize with null to avoid auto-selection

  constructor(private http: HttpClient) {}

  ngOnInit() {
    this.getPlant();
  }

  getPlant() {
    const apiUrls = this.apiurl + '/Plantid';
    const httpOptions = {
      headers: new HttpHeaders({
        'Content-Type': 'application/json'
      })
    };

    this.http.get(apiUrls, httpOptions).subscribe(
      (response: any) => {
        console.log(response);
        this.dropdownList = response.map(item => ({
          item_id: item.id,
          item_text: item.name
        }));
        console.log(this.dropdownList);
      },
      (error) => {
        console.error('Get plant failed', error);
      }
    );
  }

  dropdownSettings = {
    idField: 'item_id',
    textField: 'item_text',
  };

  onSelectedItemsChange() {
    // Handle selected items change if needed
  }
