onChartClick(event: any): void {
  if (event.active.length > 0) {
    const chartLabel = this.doughnutChartLabels[event.active[0]._index];
    // Navigate based on the clicked label
    switch (chartLabel) {
      case 'Draft':
        this.router.navigate(['/draft-page']);
        break;
      case 'Pending Approval':
        this.router.navigate(['/pending-approval-page']);
        break;
      // Add cases for other labels as needed
      default:
        // Navigate to a default page or handle differently
        break;
    }
  }
