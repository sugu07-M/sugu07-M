 onClick(event: any): void {
    const clickedIndex = event.active[0]._index;
    const clickedLabel = this.barChartLabels[clickedIndex];
    let route: string;

    // Determine route based on clicked label
    switch (clickedLabel) {
      case 'January':
        route = '/reports/january';
        break;
      case 'February':
        route = '/reports/february';
        break;
      case 'March':
        route = '/reports/march';
        break;
      default:
        // Default behavior or error handling
        break;
    }

    if (route) {
      // Navigate to the determined route
      this.router.navigate([route]);
    }
  }
