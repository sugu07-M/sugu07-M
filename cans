 onChartClick(event: any) {
    console.log('Chart clicked:', event);
    // Simulate navigation
    if (event.active.length > 0) {
      const chartDataIndex = event.active[0]._index;
      const clickedLabel = event.active[0]._model.label;
      if (clickedLabel === 'Open') {
        console.log('Navigating to Open page');
        // Replace 'open-page' with your actual route
        this.router.navigate(['/open-page']);
      } else if (clickedLabel === 'Completed') {
        console.log('Navigating to Completed page');
        // Replace 'completed-page' with your actual route
        this.router.navigate(['/completed-page']);
      }
    }
  }
(chartClicked)="onChartClick($event)"
