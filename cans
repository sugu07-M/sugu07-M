 ngOnInit(): void {
    this.attachLabelClickEventListeners();
  }

  private attachLabelClickEventListeners(): void {
    document.addEventListener('DOMContentLoaded', () => {
      const labels = document.querySelectorAll('#doughnutChartLabels .label');
      
      labels.forEach(label => {
        label.addEventListener('click', (event) => {
          const labelText = (event.target as HTMLElement).textContent?.trim();
          if (labelText) {
            this.navigateToPage(labelText);
          }
        });
      });
    });
  }

  private navigateToPage(labelText: string): void {
    switch (labelText) {
      case 'Draft':
        window.location.href = '/draft';
        break;
      case 'Pending Approval':
        window.location.href = '/pending-approval';
        break;
      case 'Approved':
        window.location.href = '/approved';
        break;
      // Add more cases for other labels as needed
      default:
        console.warn('Unhandled label:', labelText);
        break;
    }
  }
