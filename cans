 countStatus() {
    const statuses = ['Draft', 'Completed', 'Pending Approval', 'Approved', 'Rejected', 'Implement', 'Pending', 'Release', 'Closure'];
    for (const status of statuses) {
      this.statusCounts[status] = this.changerequest.filter(item => item.status.trim() === status).length;
    }
  }



<tbody>
    <tr class="tr-body">
      <td>Draft</td>
      <td *ngFor="let plantId of code">{{ statusCounts['Draft'] || 0 }}</td>
      <td>{{ getTotalCount('Draft') }}</td>
    </tr>
    <tr class="tr-body">
      <td>Completed</td>
      <td *ngFor="let plantId of code">{{ statusCounts['Completed'] || 0 }}</td>
      <td>{{ getTotalCount('Completed') }}</td>
    </tr>
    <!-- Add more rows for other statuses as needed -->
  </tbody>
