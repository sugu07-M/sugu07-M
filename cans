public chartClicked(event: ChartEvent): void {
  // Check if a doughnut chart slice was clicked
  if (event.active && event.active.length > 0) {
    // Get the index of the clicked slice
    const clickedIndex = event.active[0]._index;

    // Determine the label of the clicked slice
    const clickedLabel = this.doughnutChartLabels[clickedIndex];

    // Perform navigation based on the clicked label
    switch (clickedLabel) {
      case 'Draft':
        this.router.navigate(['/draft-page']); // Navigate to the draft page
        break;
      case 'Pending Approval':
        this.router.navigate(['/pending-approval-page']); // Navigate to the pending approval page
        break;
      // Add cases for other statuses as needed
      default:
        break;
    }
  }
}
(select)="chartClicked($event)"
