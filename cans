onChartClick(event: any) {
    if (event.active.length > 0) {
      const chartDataIndex = event.active[0]._index;
      const clickedLabel = this.barChartData[event.active[0]._datasetIndex].label;
      // Check which label was clicked and navigate accordingly
      if (clickedLabel === 'Open') {
        this.router.navigate(['/open-page']); // Change '/open-page' to the route you want to navigate to for 'Open' label
      } else if (clickedLabel === 'Completed') {
        this.router.navigate(['/completed-page']); // Change '/completed-page' to the route you want to navigate to for 'Completed' label
      }
    }
  }

(chartClicked)="onChartClick($event)"
