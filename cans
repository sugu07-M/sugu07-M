downloadExcel(): void {
  const table = document.getElementById('excel-table');
  const ws: XLSX.WorkSheet = XLSX.utils.table_to_sheet(table);

  // Set date format for date columns
  const dateColumns = ['C']; // Assuming 'Date' is in the third column
  const dateFormat = 'dd-mm-yyyy'; // Adjust date format as needed
  dateColumns.forEach((column) => {
    for (const key in ws) {
      if (ws.hasOwnProperty(key)) {
        const cell = ws[key];
        if (key.includes(column) && !isNaN(Date.parse(cell.v))) {
          cell.t = 'd';
          cell.z = dateFormat;
        }
      }
    }
  });

  const wb: XLSX.WorkBook = XLSX.utils.book_new();
  XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');

  /* save to file */
  XLSX.writeFile(wb, 'excel_table.xlsx');
}
