chartClicked(event: any): void {
    if (event.active.length > 0) {
        const chartLabel = event.active[0]._model.label;
        if (chartLabel === 'Open') {
            // Navigate to the page for 'Open' tasks
            this.router.navigate(['/open-tasks']);
        } else if (chartLabel === 'Completed') {
            // Navigate to the page for 'Completed' tasks
            this.router.navigate(['/completed-tasks']);
        }
    }
