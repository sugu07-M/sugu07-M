generateChartLabels(): string[] {
  const today = new Date();
  const currentMonth = today.getMonth() + 0; // JavaScript months are 0-indexed
  const currentYear = today.getFullYear();

  const labels = [];
  for (let i =6 ; i >= 0; i--) {
    const date = new Date(currentYear, currentMonth - i, 1);
    const month = date.toLocaleString('default', { month: 'short' });
    labels.push(`${month} ${date.getFullYear()}`);
  }
  return labels;
}

// Function to update chart labels with current and past 6 months
updateChartLabels() {
  this.barChartLabels = this.generateChartLabels();
}
