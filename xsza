 filterData() {
    this.filteredData = this.categorydata.filter(item =>
      item.categoryName.toLowerCase().includes(this.searchTerm.toLowerCase())
    );
  }
<input type="text" [(ngModel)]="searchTerm" placeholder="Search..." (input)="filterData()">
/* Style for the search input */
input[type="text"] {
  padding: 5px;
  border-radius: 5px;
  border: 1px solid #ccc;
}

