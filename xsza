multiple (change)="onDropdownChange($event)"
export class SupportTeamComponent {
  showMiniForm: boolean = false;
  formFields: any[] = [];

  constructor() {
    this.addFormField();
  }

  toggleMiniForm() {
    this.showMiniForm = !this.showMiniForm;
  }

  addFormField() {
    this.formFields.push({});
  }

  removeFormField() {
    this.formFields.pop();
  }

  onDropdownChange(event: Event) {
    const dropdown = event.target as HTMLSelectElement;
    const selectedOptions = Array.from(dropdown.selectedOptions).map(option => option.value);
    console.log("Selected options:", selectedOptions);
  }
}
