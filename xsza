  mergedData: any[] = [];
 <tr *ngFor="let item of mergedData">
getData() {
    const apiUrls = [
      this.apiurl + '/SupportTeam',
      this.apiurl + '/SupportteamAssigned'
    ];

    const requests = apiUrls.map(url => this.http.get(url));

    forkJoin(requests).subscribe(
      (responses: any[]) => {
        // Assuming both responses are arrays of objects with a common 'id' property
        const [supportTeamData, teamAssignedData] = responses;

        // Merge data based on the common 'id' property
        this.mergedData = supportTeamData.map((item: any) => ({
          ...item,
          ...(teamAssignedData.find((x: any) => x.id === item.id) || {})
        }));
      },
      (error) => {
        console.error("Get failed", error);
      }
    );
  }
